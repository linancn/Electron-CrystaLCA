{
    "appId": "org.crystalca",
    "productName": "CrystaLCA",
    "copyright": "Nan LI",
    "directories": {
        "app": ".",
        "output": "dist",
        "buildResources": "build-res"
    },
    "files": [
        "package.json",
        "compiled/**/*",
        "node_modules"
    ],
    "dmg": {
        "background": null,
        "backgroundColor": "#ffffff",
        "window": {
            "width": "400",
            "height": "300"
        },
        "contents": [
            {
                "x": 100,
                "y": 100
            },
            {
                "x": 300,
                "y": 100,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "mac": {
        "target": "dmg",
        "category": "public.app-category.utilities"
      },
    "win": {
        "target": "nsis"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    }
}