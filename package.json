{
  "name": "electron_cystalca",
  "version": "1.0.0",
  "repository": "https://github.com/linancn/Electron-CrystaLCA",
  "keywords": [
    "electron",
    "CrystaLCA",
    "LCA"
  ],
  "main": "compiled/main.js",
  "build": {
    "appId": "org.cystalca.electron",
    "asar": true,
    "directories": {
    "output": "dist"
    },
    "win": {
    "target": [
    "nsis"
    ]
    },
    "publish": [
    {
    "provider": "CrystaLCA",
    "url": "https://www.crystalca.org/"
    }
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "appImage": {
      "license": "LICENSE"
    },
    "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true
    }
    },
  "scripts": {
    "compile": "tsc",
    "start": "npm run compile && electron .",
    "pack": "electron-builder --dir",
    "release": "electron-builder"
  },
  "author": "Nan LI",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "electron": "^13.1.6",
    "electron-builder":"^22.11.7"
  }
}
